.calculator-full-bg
  section.section
    .container
      .section__title Калькулятор
      //- include ../../blocks/calculator-full.pug
      .calculator-full-wrap
        .tabs
          .tabs__header
            .tabs__header-item Приём сырья
            .tabs__header-item Уничтожение документов
            .tabs__header-item Хранение документов
          .tabs__content.tabs__content--column-reverse
            .tabs__content-row
              .range-kg-wrap
                .range-kg__title Сколько килограмм
                input(type="range", name="#" min="0" max="10000" value="5000").range-kg

            .tabs__content-row
              .checkbox-goup-type-b
                .checkbox-goup-type-b__title Тип доставки
                span.checkbox-goup-type-b__text.checkbox-goup-type-b__text--first-item Самоподвоз
                .checkbox-track
                  input(type="checkbox", name="clog")#checkboxCalcTypeB.checkbox-type-b
                  label(for="checkboxCalcTypeB").checkbox-label-type-b
                span.checkbox-goup-type-b__text Транспорт компании "Миротворец"

            .tabs__content-row
              .select(tabindex="0")
                .select__options-wrap
                  .select__empty-cutter
                  .select__wrap-only-option.scroll-vertical-small
                    .select__option Картон
                    .select__option Макулатура (офисная бумага)
                    .select__option Макулатура (книги)
                    .select__option Макулатура (газеты)
                    .select__option Макулатура (журналы)
                    .select__option Макулатура (иное)
                    .select__option Пленка (ПВД)
                    .select__option Пленка (стрейч)
                    .select__option ПЭТ
                    .select__option Масло
                    .select__option Поддоны
                    .select__option Кеги
                    .select__option Стекло
                .select__header
                  span.select-current Выберите тип сырья
                  .select__icon-dropdown
                    img(src="assets/img/form/select-dropdown.png", alt="стрелка")
                  .error-no-selected__message
                    .error-no-selected__message-icon !
                    .error-no-selected__message-text Не выбран тип сырья

              .checkbox-goup
                span.checkbox-goup__text Засор
                input(type="checkbox", name="clog")#checkboxCalc.checkbox
                label(for="checkboxCalc").checkbox-label
